<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>
<div class="container">
<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :detail %>
  <%= f.text_area :detail %>
  </div>
  <div class="field">
    <%= f.label :progress %><br />
    <%= f.label :WAITING %>
    <%= f.radio_button :progress, :WAITING %>
    <%= f.label :WORKING %>
    <%= f.radio_button :progress, :WORKING %>
    <%= f.label :COMPLETED %>
    <%= f.radio_button :progress, :COMPLETED %>
  </div>
  <div class="form-group">
    <%= f.label :deadline %>
    <%= f.date_select :deadline, class:"form-control" %>
  </div>
  <%= f.submit class:'btn btn-primary'%>
<% end %>
<%= link_to "戻る", tasks_path %>
</div>