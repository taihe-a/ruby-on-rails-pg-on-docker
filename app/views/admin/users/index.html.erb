<div class="container">
<div class="d-flex">
<p>名前：<%= session[:name] %>　</p>
<p>ID：<%= session[:user_id] %></p>
  </div>
<div class="align-items-center">
<h1>ユーザ一覧</h1>
<div class="ml-auto boards__linkBox">
<%= link_to "ユーザー登録", new_admin_user_path, class:"btn btn-info"%>
<%= link_to "ユーザー一覧", admin_users_path, class:"btn btn-info"%>
</div>
</div>
<% if flash[:notice] %>
<div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>
    <table class="table table-hover boards__table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>名前</th>
                <th>メールアドレス</th>
                <th>管理権限</th>
                <th>タスク数</th>
                <th>詳細</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.admin %></td>
                        <td><%= user.tasks.length %></td>
                        <td><%= link_to "詳細", admin_user_path(user.id), class:"btn btn-success"%></td>
                    </tr>
            <% end %>
        </tbody>
    </table>
</div>