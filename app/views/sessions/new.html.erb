<div class="container">
<% if flash[:notice] %>
<div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>
    <%= form_with(scope: :session, local: true) do |f| %>
        <div class="field">
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>
        <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <div class="actions">
            <%= f.submit 'ログイン'%>
        </div>
        <% end %>
</div>
